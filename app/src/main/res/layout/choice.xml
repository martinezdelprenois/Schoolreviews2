<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:id="@+id/institute"
        android:onClick="clicker" />

    <Button
        android:text="@string/reviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/institute"
        android:layout_toRightOf="@+id/institute"
        android:layout_toEndOf="@+id/institute"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:id="@+id/viewer"
        android:onClick="clicker" />
</RelativeLayout>
